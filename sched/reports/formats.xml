    <template
        id="format_turn_change">

        <!-- res_company es una variable disponible a nivel global en los templates de reportes es usado en la cabecera  -->
        <t t-set="company" t-value="res_company"/>


        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div style="border: 1px solid black;padding:12px">
                        <br/>
                        <div class="page">

                            <div class="container">
                                <div class="row">
                                    <div class="col-12 text-center" style="margin-top:4px;font-size:18px;font-weight:600">
                                        EMPRESA ADMINISTRADORA DE AEROPUERTOS INTERNACIONALES
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-12 text-center" style="margin-top:10px;font-size:20px;font-weight:600">
                                        SOLICITUD DE CAMBIO DE TURNO
                                    </div>
                                </div>
                            </div>

                            <div class="row" style="padding-top:90px;padding-bottom:80px;font-size:15px;">
                                <div class="col-12">Fecha:
                                    <u>&#xA0;&#xA0;
                                        <span t-esc="o.write_date.strftime('%d')"/>&#xA0;&#xA0;</u>/<u>&#xA0;&#xA0;<span t-esc="o.write_date.strftime('%B')"/>&#xA0;&#xA0;</u>
                                    /
                                    <u>&#xA0;&#xA0;<span t-esc="o.write_date.strftime('%Y')"/>
                                        &#xA0;&#xA0;</u>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td>
                                                Yo,
                                            </td>
                                            <td style='border-bottom: 1px solid #BDBDBD;padding:5px 0px 2px 5px;width:33%;text-align:center'>
                                                <span t-esc="o.requested_by.name"/>
                                            </td>
                                            <td style="text-align:center">
                                                que me desempeño como:
                                            </td>
                                            <td style='text-align:center;border-bottom: 1px solid #BDBDBD;padding:5px 0px 2px 5px;width:40%;'>
                                                Ing. mantto. Radar
                                            </td>
                                        </tr>

                                    </table>
                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:90px;'>
                                                en el área de
                                            </td>
                                            <td style='border-bottom:1px solid #BDBDBD;padding:5px 0px 2px 5px;width:16%;text-align:center'>
                                                Estación Radar
                                            </td>
                                            <td style='width:125px;text-align:center'>
                                                , departamento de
                                            </td>
                                            <td style='border-bottom:1px solid #BDBDBD;padding:5px 0px 2px 5px;width:27%;text-align:center'>
                                                Electrónica y Comunicaciones
                                            </td>
                                            <td style='width:200px;text-align:center'>
                                                , solicito me autorice cambio
                                            </td>
                                        </tr>
                                    </table>

                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:170px;'>
                                                de turno con el (la) Sr.(a)
                                            </td>
                                            <td style='border-bottom:1px solid #BDBDBD;padding:5px 0px 2px 5px;text-align:center;width:35%;'>
                                                <span t-esc="o.accepted_by.name"/>
                                            </td>
                                            <td>
                                                , quien se desempeña en la misma área
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3">
                                                realizando funciones similares.</td>
                                        </tr>
                                    </table>
                                    <br/>
                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:95px;'>
                                                el (la) Sr.(a)
                                            </td>
                                            <td style='border-bottom: 1px solid #BDBDBD;padding:5px 0px 2px 5px;width:40%;text-align:center'>
                                                <span t-esc="o.accepted_by.name"/>
                                            </td>
                                            <td>
                                                cubrira mi turno correspondiente en la fecha:
                                            </td>
                                        </tr>
                                    </table>

                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:130px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-esc="o.original_turn_date.strftime('%d')"/>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                de
                                            </td>
                                            <td style='width:130px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-esc="o.original_turn_date.strftime('%B')"/>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                del
                                            </td>
                                            <td style='width:130px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-esc="o.original_turn_date.strftime('%Y')"/>
                                            </td>
                                            <td style="text-align:center;width:150px;">
                                                en el horario de las
                                            </td>
                                            <td style='width:130px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-if="o.original_turn.name == 'T1'">06:00</span>
                                                <span t-if="o.original_turn.name == 'T2'">02:00</span>
                                                <span t-if="o.original_turn.name == 'T3'">10:00</span>
                                                <span t-if="o.original_turn.name == 'T4'">08:00</span>
                                            </td>
                                            <td style='width:30px;'>
                                                <span t-if="o.original_turn.name == 'T1'">am</span>
                                                <span t-if="o.original_turn.name == 'T2'">pm</span>
                                                <span t-if="o.original_turn.name == 'T3'">pm</span>
                                                <span t-if="o.original_turn.name == 'T4'">am</span>
                                            </td>
                                        </tr>
                                    </table>
                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:50px;'>
                                                a las
                                            </td>
                                            <td style='width:120px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-if="o.original_turn.name == 'T1'">02:00</span>
                                                <span t-if="o.original_turn.name == 'T2'">10:00</span>
                                                <span t-if="o.original_turn.name == 'T3'">06:00</span>
                                                <span t-if="o.original_turn.name == 'T4'">05:00</span>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                <span t-if="o.original_turn.name == 'T1'">pm</span>
                                                <span t-if="o.original_turn.name == 'T2'">pm</span>
                                                <span t-if="o.original_turn.name == 'T3'">am</span>
                                                <span t-if="o.original_turn.name == 'T4'">pm</span>
                                            </td>
                                            <td style='width:180px;'>
                                                , yo se lo repondré  el día
                                            </td>
                                            <td style='width:120px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-esc="o.required_turn_date.strftime('%d')"/>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                de
                                            </td>
                                            <td style='width:120px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-esc="o.required_turn_date.strftime('%B')"/>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                del
                                            </td>
                                            <td style='width:120px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-esc="o.required_turn_date.strftime('%Y')"/>
                                            </td>
                                        </tr>
                                    </table>
                                    <table style='margin-top:17px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:50px;'>
                                                de las
                                            </td>
                                            <td style='width:120px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-if="o.required_turn.name == 'T1'">06:00</span>
                                                <span t-if="o.required_turn.name == 'T2'">02:00</span>
                                                <span t-if="o.required_turn.name == 'T3'">10:00</span>
                                                <span t-if="o.required_turn.name == 'T4'">08:00</span>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                <span t-if="o.required_turn.name == 'T1'">am</span>
                                                <span t-if="o.required_turn.name == 'T2'">pm</span>
                                                <span t-if="o.required_turn.name == 'T3'">pm</span>
                                                <span t-if="o.required_turn.name == 'T4'">am</span>
                                            </td>
                                            <td style='width:50px;text-align:center'>
                                                a las
                                            </td>
                                            <td style='width:120px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <span t-if="o.required_turn.name == 'T1'">02:00</span>
                                                <span t-if="o.required_turn.name == 'T2'">10:00</span>
                                                <span t-if="o.required_turn.name == 'T3'">06:00</span>
                                                <span t-if="o.required_turn.name == 'T4'">05:00</span>
                                            </td>
                                            <td style='width:35px;text-align:center'>
                                                <span t-if="o.required_turn.name == 'T1'">pm</span>
                                                <span t-if="o.required_turn.name == 'T2'">pm</span>
                                                <span t-if="o.required_turn.name == 'T3'">am</span>
                                                <span t-if="o.required_turn.name == 'T4'">pm</span>
                                            </td>
                                            <td style='width:170px;'>
                                                del roll de trabajo del mes
                                            </td>
                                            <td style='width:95px;text-align:center;border-bottom: 1px solid #BDBDBD;'>

                                                <span t-field="o.sched_month"/>

                                            </td>

                                        </tr>
                                    </table>
                                    <br/><br/><br/>
                                    <br/>

                                
                                    <table style='margin-top:20px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:180px;text-align:right;vertical-align: bottom;'>
                                                Trabajador solicitante:
                                            </td>
                                            <td style='width:180px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <img t-if="o.requested_by.signature and o.use_signature" t-att-src="image_data_uri(o.requested_by.signature)" style="max-height: 64px; margin-bottom:1px;"/>
                                            </td>
                                            <td style='width:180px;text-align:right;vertical-align: bottom;'>
                                                Trabajador que acepta:
                                            </td>
                                            <td style='width:180px;border-bottom: 1px solid #BDBDBD;text-align:center'>
                                                <img t-if="o.accepted_by.signature and o.use_signature" t-att-src="image_data_uri(o.accepted_by.signature)" style="max-height: 64px;margin-bottom:1px;"/>    
                                            </td>


                                        </tr>
                                    </table>
                                    <table style='margin-top:10px;font-size:15px;width:100%;'>
                                        <tr>
                                            <td style='width:180px;text-align:right'></td>
                                            <td style='text-align:center'>
                                                Firma
                                            </td>
                                            <td style='width:180px;text-align:right'></td>
                                            <td style='text-align:center'>
                                                Firma
                                            </td>


                                        </tr>
                                    </table>
                                    <br/><br/>
                                    Vo. Bo. Jefe de Turno:
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                </div>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record model="report.paperformat" id="paperformat_turn_change">
        <field name="name">Formato Cambio de turno</field>
        <field name="default" eval="True"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <!--Margen top de todo el documento incluye cabecera-->
        <field name="margin_bottom">20</field>
        <field name="margin_right">10</field>
        <field name="margin_left">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <!-- Espaceado de cabecera y contenido, de  lo contrario la cabecera se sobre pone-->
        <field name="dpi">90</field>
    </record>

    <report paperformat="paperformat_turn_change" id="action_report_turn_change" model="sched.turn.change" string="Cambio de turno" report_type="qweb-pdf" name="sched.format_turn_change" file="sched.format_turn_change"/>

</odoo>
