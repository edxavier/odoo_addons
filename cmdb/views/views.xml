<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="net.host_list">
      <field name="name">Listado de Hosts</field>
      <field name="model">net.host</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="ip"/>
          <field name="device_system"/>
          <field name="mem_usage"/>
          <field name="cpu_usage"/>
          <field name="cpu_load"/>
          <field name="host_datetime"/>

          <field name="is_up"/>
        </tree>
      </field>
    </record>
