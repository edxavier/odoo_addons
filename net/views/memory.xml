                        <field name="usage_percent" type='average'/>
                        
                    </graph>
                </field>
        </record>
        -->

        <record model="ir.actions.act_window" id="net.memory_action_window">
            <field name="name">Historial de memoria</field>
            <field name="res_model">net.memory</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Aun no se ha registrado ninguna entrada en el historial</p>
            </field>
        </record>
        <!-- menu categories -->
        <menuitem name="Memoria" id="net.memory_menu" parent="net.menu_root" action="net.memory_action_window"/>
    </data>
</odoo>